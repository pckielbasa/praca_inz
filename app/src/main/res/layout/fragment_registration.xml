<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="registrationViewModel"
            type="com.example.praca_inz.authorization.registration.RegistrationViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/passwordRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:hint="@string/passwordText"
            android:theme="@style/EditTextStyle"
            app:layout_constraintEnd_toEndOf="@+id/usernameRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/usernameRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvPasswordAlert"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,LabelFor" />

        <EditText
            android:id="@+id/repeatPasswordRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/repeatPasswordText"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:theme="@style/EditTextStyle"
            app:layout_constraintEnd_toEndOf="@+id/usernameRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/usernameRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvRepeatPasswordAlert"
            tools:ignore="SpeakableTextPresentCheck,LabelFor,TextContrastCheck" />

        <Button
            android:id="@+id/registerButtonRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/registerButtonText"
            app:layout_constraintEnd_toEndOf="@+id/phoneNumberRegister"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/phoneNumberRegister"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberRegister" />

        <EditText
            android:id="@+id/emailAddressRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextStyle"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:hint="@string/emailText"
            app:layout_constraintEnd_toEndOf="@+id/usernameRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/usernameRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvEmailAddressAlert"
            tools:ignore="SpeakableTextPresentCheck,LabelFor" />

        <EditText
            android:id="@+id/phoneNumberRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextStyle"
            android:hint="@string/phoneNumberText"
            android:importantForAutofill="no"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="@+id/usernameRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/usernameRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvNumberAlert"
            tools:ignore="SpeakableTextPresentCheck,LabelFor,TextContrastCheck" />

        <EditText
            android:id="@+id/usernameRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:importantForAutofill="no"
            android:hint="@string/usernameText"
            android:inputType="textPersonName"
            android:theme="@style/EditTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUsernameAlert"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,LabelFor" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/headerRegisterText"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvUsernameAlert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPasswordAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AlertsStyle"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/usernameRegister"
            app:layout_constraintTop_toBottomOf="@+id/usernameRegister" />

        <TextView
            android:id="@+id/tvRepeatPasswordAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AlertsStyle"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/tvPasswordAlert"
            app:layout_constraintTop_toBottomOf="@+id/passwordRegister" />

        <TextView
            android:id="@+id/tvEmailAddressAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AlertsStyle"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/tvRepeatPasswordAlert"
            app:layout_constraintTop_toBottomOf="@+id/repeatPasswordRegister" />

        <TextView
            android:id="@+id/tvNumberAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AlertsStyle"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/emailAddressRegister"
            app:layout_constraintTop_toBottomOf="@+id/emailAddressRegister" />

        <TextView
            android:id="@+id/tvUsernameAlert"
            android:layout_width="wrap_content"
            android:theme="@style/AlertsStyle"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/usernameRegister"
            app:layout_constraintStart_toStartOf="@+id/usernameRegister" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>