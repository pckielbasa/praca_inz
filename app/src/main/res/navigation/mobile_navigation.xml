<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_calendar">

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.praca_inz.ui.calendar.CalendarFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/navigation_medicine"
        android:name="com.example.praca_inz.ui.medicine.MedicineFragment"
        android:label="@string/title_medicine"
        tools:layout="@layout/fragment_medicine" />

    <fragment
        android:id="@+id/navigation_allergies"
        android:name="com.example.praca_inz.ui.allergies.AllergiesFragment"
        android:label="@string/title_allergies"
        tools:layout="@layout/fragment_allergies" />

    <fragment
        android:id="@+id/navigation_meals"
        android:name="com.example.praca_inz.ui.meals.MealsFragment"
        android:label="@string/title_meals"
        tools:layout="@layout/fragment_meals" >
        <action
            android:id="@+id/action_navigation_meals_to_addMealsFragment"
            app:destination="@id/addMealsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_change"
        android:name="com.example.praca_inz.ui.change.ChangeFragment"
        android:label="@string/title_change"
        tools:layout="@layout/fragment_change" />
    <fragment
        android:id="@+id/addMealsFragment"
        android:name="com.example.praca_inz.ui.meals.addMeals.AddMealsFragment"
        android:label="fragment_add_meals"
        tools:layout="@layout/fragment_add_meals" >
        <action
            android:id="@+id/action_addMealsFragment_to_navigation_meals"
            app:destination="@id/navigation_meals" />
    </fragment>
</navigation>